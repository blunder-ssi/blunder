#!/usr/bin/env bash

set -ex

stack install

if [ "$1" = --no-cache ]
then
    rm -f sire.cache
fi

cleanup () { rm -f errout; }
trap cleanup EXIT

runtest () {
    "$@" 2>errout || {
        echo ERROR OUTPUT
        echo ============
        echo
        cat errout
        exit 1
    }
}

ulimit -n 55555 # or else fulltag sometimes fails

sh/sire-load-all -M </dev/null
runtest sh/full-tag-site-demo --ci
sh/testdemo-cog-asktell-basic
sh/testdemo-cog-asktell-askcrash
sh/rex-test
sh/bootstrap-sire
