= (checkOrd x y)
@ o (cmpNat x y)
| if (eqlNat o LT)
  | and (bit (lthNat x y))
  | and (bit (lteNat x y))
  | and (not (eqlNat x y))
  | and (not (gteNat x y))
  | and (not (gthNat x y))
  | and (eqlNat x (minNat x y))
        (eqlNat y (maxNat x y))
| if (eqlNat o EQ)
  | and (not (lthNat x y))
  | and (bit (lteNat x y))
  | and (bit (eqlNat x y))
  | and (bit (gteNat x y))
        (not (gthNat x y))
| else
  | and (not (lthNat x y))
  | and (not (lteNat x y))
  | and (not (eqlNat x y))
  | and (bit (gteNat x y))
  | and (bit (gthNat x y))
  | and (eqlNat y (minNat x y))
        (eqlNat x (maxNat x y))

!!= 1 (checkOrd 0 0)
