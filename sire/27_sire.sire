= (validMacroExpansion r)
| and isRow-r
| and (eql 3 len-r)
@ [tag v1 v2] r
# switch tag
* 0 | isRexLike v2 ; (&& isStateLike v1)
* 1 | (isNat v2 && isRexLike v1)
* _ | FALSE

= (expand macVal rex st)
